<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCuatro"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_dom_uno" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCuatro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:layout_marginTop="4dp"

                android:text="Cliente: "
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageViewCuatro"
                app:layout_constraintTop_toBottomOf="@+id/tvRowDos" />

            <TextView
                android:id="@+id/textViewUno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Origen:"
                app:layout_constraintStart_toEndOf="@+id/imageViewCuatro"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRowDos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:text="Destino:"
                app:layout_constraintStart_toEndOf="@+id/imageViewCuatro"
                app:layout_constraintTop_toBottomOf="@+id/textViewUno" />

            <TextView
                android:id="@+id/textViewTres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"

                android:layout_marginTop="4dp"

                android:text="Estado:"
                app:layout_constraintStart_toEndOf="@+id/imageViewCuatro"
                app:layout_constraintTop_toBottomOf="@+id/tvRowDos" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>